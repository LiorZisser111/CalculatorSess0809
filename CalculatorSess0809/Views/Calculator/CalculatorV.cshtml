@model CalculatorSess0809.Models.Calculator

@{
    ViewData["Title"] = "Calculator";
}

<h1>Calculator</h1>

<form asp-action="Calculate" asp-controller="Calculator" method="post">
    <div class="form-group">
        <label asp-for="Number1">First Num:</label>
        <input asp-for="Number1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number2">Second Num:</label>
        <input asp-for="Number2" class="form-control" />
    </div>
    <button type="submit" name="action" value="Sum" class="btn btn-primary">חשב סכום</button>
    <button type="submit" name="action" value="Difference" class="btn btn-secondary">חשב הפרש</button>
</form>

<hr />

@if (Model != null && Model.Result != 0)
{
    <h3>The Result Is: @Model.Result</h3>
}